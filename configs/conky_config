# in case the images change
# imlib_cache_flush_interval 120

### YOUR CHANGES
### Things you have to change:
# point this to the directory to which you have unpacked this conky
template1 $HOME/toinstall/configs/domino_clock

### Things you might want to change:
# lines 25-27: window position
# line 46: transparency
# line 52: how often is the display updated (default: every 5 seconds)
### END OF YOUR CHANGES ###############################################

#####
## WINDOW SIZE & POSITIONING
############################
alignment bl # top left
gap_x 750
gap_y 250
minimum_size 374 200
maximum_width 374

#####
## GENERAL WINDOW SETTINGS
##########################

own_window_title conky_domino_clock

background yes
own_window yes

own_window_type override
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

own_window_transparent no

own_window_argb_visual yes
own_window_argb_value 0 #0 = full transparency; 255 = full opacity

#####
## UPDATE INTERVAL
##################

update_interval 5 # refresh every 5 seconds, not every second

#####
## DOUBLE BUFFERING
###################

double_buffer yes # reduces flicker, may not work for everyone
no_buffers yes

#####
## stuff after 'TEXT' will be formatted on screen
#################################################
TEXT
